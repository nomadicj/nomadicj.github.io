source 'https://rubygems.org'

# Use the latest GitHub Pages gem and its dependencies
gem 'github-pages', group: :jekyll_plugins

# Additional plugins
group :jekyll_plugins do
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
end

# Required for Ruby 3.0+
gem 'webrick', '~> 1.8'

# Force nokogiri to a newer, more secure version
gem 'nokogiri', '>= 1.14.3'

# Force activesupport to a newer version
gem 'activesupport', '>= 6.1.7.5'